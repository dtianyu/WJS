<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <body>

        <ui:composition template="./template/mainTemplate.xhtml">

            <ui:define name="content">
                <f:view>
                    <h:form id="formDetail">
                        <h:outputScript library="js" name="detailContent.js" target="head"></h:outputScript>
                        <div class="topTitle">
                            <div style="padding-left: 10px;padding-top: 10px;">
                                <a class="pageTile">健康知识</a>
                                <span class="quicklink">正文</span><span class="quicklink">|</span><a class="quicklink" href="/WJS-war/faces/knowledgeList.xhtml">健康知识</a><span class="quicklink">|</span><a class="quicklink" href="/">首页</a><span class="quicklink">当前位置：</span>
                            </div>
                        </div>
                        <p:outputPanel id="panelDetail" styleClass="panellist"> 
                            <div style="text-align: center;padding-bottom: 20px;"><a class="pageTile">#{knowledgeQueryBean.currentEntity.title}</a></div>
                            <h:outputText id="contentDetail" value="" /> 
                        </p:outputPanel>
                        <div class="footerTitle">
                            <div style="padding-left: 10px;padding-top: 10px;text-align: center;">
                                <a>
                                    发布日期：<h:outputText  value="#{knowledgeQueryBean.currentEntity.credate}"><f:convertDateTime pattern="yyyy/MM/dd" /></h:outputText></a>
                            </div>
                        </div>
                        <div  style="display: none;">
                            <input id="detailContent" value="#{knowledgeQueryBean.currentEntity.content}"/>
                        </div>
                        <div class="navPage">
                            <div class="navPrevPage"><span>上一篇：</span><h:link outcome="knowledgeDetail" value="#{knowledgeQueryBean.prev.title}" 
                                                                              rendered="#{knowledgeQueryBean.hasPrev==true}">
                                    <f:param name="id" value="#{knowledgeQueryBean.prev.id}"></f:param>
                                </h:link><h:outputText value="#{knowledgeQueryBean.prev.title}" rendered="#{knowledgeQueryBean.hasPrev==false}"/></div> 
                            <div class="navNextPage"><span>下一篇：</span><h:link outcome="knowledgeDetail" value="#{knowledgeQueryBean.next.title}"
                                                                              rendered="#{knowledgeQueryBean.hasNext==true}">
                                    <f:param name="id" value="#{knowledgeQueryBean.next.id}"></f:param>
                                </h:link><h:outputText value="#{knowledgeQueryBean.next.title}" rendered="#{knowledgeQueryBean.hasNext==false}"/></div> 
                        </div>
                    </h:form>
                </f:view>

            </ui:define>

        </ui:composition>

    </body>
</html>

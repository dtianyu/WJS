html,body{
    height: 100%;   
    margin: 0px;
    padding: 0px;
}

#container {
    min-height:100%;
    height: auto!important;
    height: 100%;
}

#center{
    width: 980px;
    margin: auto;
    padding-bottom: 45px;
}

#bottom {
    position: relative;
    margin-top: -40px;
    height: 40px; 
    background-image: url("../img/bottombg.gif") ; 
    color: white;
    text-align: center;
    clear: both ;  
}

#top {
    margin: 0px 0px 0px 0px;
    float: top ;
}

#top a:link, #top a:visited {
    color: white;
    font-weight : bold;
    text-decoration: none;
}

#top a:link:hover, #top a:visited:hover  {
    color: black;
    font-weight : bold;
    text-decoration : none;
}

#topInfo{
    width: 980px;
    height: 25px;
    margin: auto;  
}

#topAdv{
    background-image: url("./../resources/img/headimg.jpg");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-repeat: no-repeat;
    width: 980px;
    height: 100px;
    margin: auto;
}

#topNav{
    background-image: url("../../resources/img/navbg.gif");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    height: 70px;
    margin: -0px 0px 10px 0px;
}

#topNavBar{
    width: 980px;
    margin: auto ;
}

#topNavSearch{
    width:980px;
    height: 30px;
    margin: auto;
    padding-top: 40px;
}

#left {
    float: left;
    width: 240px;
    margin:  0px 0px 10px 0px;
}

#content{
    float: left;
    padding: 0px;
    margin: 0px 0px 10px 10px;
}

#contentlist{
    clear: both;
    width: 980px;
    margin: auto;
}

#pageContent{
    width: 720px;  
}

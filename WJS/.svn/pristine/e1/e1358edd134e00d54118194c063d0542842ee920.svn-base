root { 
    display: block;
}

button{
    color: buttonhighlight;
    height: 22px;
}

button span{
    font-size:10px;
}

.currentUserLable{
    border: none;
    color: black;
    font-weight: bold; 
    width: 60px;
    float: right;
    padding: 5px;
}

.currentUserName{
    border:none;
    color: black;
    font-weight: bold; 
    width: 80px;
    float: right;
    padding: 5px;
}

/*用户登录框*/
#loginDailog{
    height: 230px;
    width: 400px;
    margin: auto;
    background-color:black;
    color:white;
}

form .btnLogout{
    background-color: orange;  
    float: right;
}

form .btnLogin{
    height: 35px;
    width: 400px;
    text-align: center;
    background-color: #ff6666;
}
form .btnLogin span{
    font-size: 14px;
}

form .plglogin{
    width: 400px;
    margin-top: 100px;
    background: transparent none repeat 0% 0%;
}

form .plglogin tr{
    height: 65px;
    border:none;
    background-color: transparent;
}

form .plglogin td{
    border: none;
}

.plgLoginLabel{
    width: 100px;
    text-align: right;
}

.plgLoginTnput input{
    width: 200px;
}
/*用户登录框*/

form .plgHead{
    margin: 0 0 20px 0;
    width: 980px;
}

form .plgHead tr{

}

form .plgHead td{

}
/*设定表头panelGrid*/
form .plgQuery{
    margin: 0 0 20px 0;
    width: 980px;
}

form .plgQuery tr{
    border: none; 
}

form .plgQuery td{
    border: none; 
}
/*设定查询条件panelGrid*/

form .plgLable{
    width: 60px;
    text-align: right;
}

form .plgInput {
    width: 220px;
}
/*设定panelGrid中Column的宽度,配合columnClasses使用*/

form .tblTop{
    width: 178px;  
}

form .tblTop .btnNewsMore{
    background-image: url("../../resource/img/titlebg.gif");
    width: 10px;
    float: right;
}

form .tbllist{
    margin: 0 auto;
    width: 980px;
}




.tabview .tbllist{

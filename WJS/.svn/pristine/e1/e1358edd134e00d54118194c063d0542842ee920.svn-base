.ui-selectonemenu{
    height: 22px;
}

.ui-panelmenu{
    font-size: 10px;
}

.ui-panelmenu-header{
    height: 40px;
    background-image: url("../../resources/img/leftmenubg.gif");
    background-repeat: no-repeat;
    background-size: 100% 100%; 
    font-size: 14px;
    padding-left: 12px;
}

.ui-panelmenu .ui-menuitem-link{

<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:p="http://primefaces.org/ui">

    <body>

        <ui:composition template="./../template/adminTemplate.xhtml">

            <ui:define name="right">
                <f:view>      
                    <h:form id="formList">
                        <p:growl id="growl" showSummary="false" showDetail="true" autoUpdate="true" sticky="true" /> 
                        <p:dataTable id="tbllist" value="#{licenseManagedBean.model}" var="item"  paginator="true"  paginatorPosition="bottom" rows="15"  
                                     paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  
                                     rowsPerPageTemplate="15,30,45"  lazy="true"  styleClass="tbllist" >
                            <f:facet name="header">
                                <p:commandButton id="btnCreate" value="新增" actionListener="#{licenseManagedBean.create()}" style="float: right" icon="ui-icon-plus"  
                                                 oncomplete="newDialog.show();" update=":formNew:dlgNew"/>
                                <h:outputLabel>行政许可</h:outputLabel>
                            </f:facet>
                            <p:column styleClass="w550">
                                <f:facet name="header">
                                    <h:outputText value="标题"/>
                                </f:facet>
                                <h:outputText value="#{item.title}"/>
                            </p:column>
                            <p:column styleClass="w060">
                                <f:facet name="header">
                                    <h:outputText value="首页显示"/>
                                </f:facet>
                                <p:selectBooleanCheckbox value="#{item.ontop}" disabled="true"/>
                            </p:column>                         
                            <p:column>
                                <f:facet name="header">
                                    <h:outputText value="状态"/>
                                </f:facet>
                                <h:outputText value="#{item.status}"/>
                            </p:column>
                            <p:column styleClass="w080">
                                <f:facet name="header">
                                    <h:outputText value="Do"/>
                                </f:facet>
                                <p:menuButton value="操作" style="float: right">  
                                    <p:menuitem id="btnView" actionListener="#{licenseManagedBean.view(item)}" icon="ui-icon-document" value="查看" style="float: right"
                                                oncomplete="viewDialog.show()" update=":formView:dlgView" />                        
                                    <p:menuitem id="btnEdit" actionListener="#{licenseManagedBean.edit(item)}" icon="ui-icon-pencil" value="修改" 
                                                rendered="#{item.status!='V'}" oncomplete="editDialog.show()" update=":formEdit:dlgEdit"/>                                                     
                                    <p:menuitem id="btnDelete" actionListener="#{licenseManagedBean.delete(item)}" icon="ui-icon-close" value="删除" 
                                                rendered="#{item.status!='V' }" update=":formList"/>                  
                                </p:menuButton>
                            </p:column>
                            <f:facet name="footer">
                                <p:commandButton id="btnLoad" value="刷新" actionListener="#{licenseManagedBean.init()}" style="float: right"
                                                 icon="ui-icon-search"    update=":formList"/>
                            </f:facet>  
                        </p:dataTable>
                    </h:form>
                    <h:form id="formNew">
                        <p:dialog id="dlgNew" header="行政许可－新增窗口" widgetVar="newDialog" modal="true">
                            <p:panelGrid columns="2" columnClasses="plgLable,plgInput520" styleClass="plgDialog" > 
                                <h:outputLabel value="标题" for="title" />
                                <p:inputText id="title" value="#{licenseManagedBean.newEntity.title}" required="true" requiredMessage="标题不能空白."/>
                                <h:outputLabel value="首页显示" for="ontop" />
                                <p:selectBooleanCheckbox id="ontop" value="#{licenseManagedBean.newEntity.ontop}" required="true" requiredMessage="请选择是否在首页显示."/>    
                                <h:outputLabel value="内容" for="content" />
                                <p:editor id="content" value="#{licenseManagedBean.newEntity.content}" required="true" requiredMessage="内容不能空白."></p:editor>
                                <h:outputLabel value="创建人" for="creator"/>
                                <p:inputText id="creator" value="#{licenseManagedBean.newEntity.creator}" title="创建人"/>
                                <h:outputText value="创建日期"/>
                                <h:outputText value="#{licenseManagedBean.newEntity.credate}" title="创建日期">
                                    <f:convertDateTime pattern="yyyy/MM/dd" />
                                </h:outputText>
                                <f:facet name="footer">
                                    <p:commandButton id="btnSave" action="#{licenseManagedBean.persist()}"  icon="ui-icon-disk" value="保存" 
                                                     style="float: right" oncomplete="newDialog.hide();" update=":formList"/>
                                    <p:button id="btnClose" value="退出"  style="float: right"
                                              icon="ui-icon-close" href="#"  onclick="newDialog.hide();" />
                                </f:facet> 
                            </p:panelGrid>
                        </p:dialog>
                    </h:form>
                    <h:form id="formEdit">
                        <p:dialog id="dlgEdit" header="行政许可－修改窗口" widgetVar="editDialog" modal="true"  >
                            <p:panelGrid columns="2" columnClasses="plgLable,plgInput520" styleClass="plgDialog" >
                                <h:outputLabel value="标题" for="title" />
                                <p:inputText id="title" value="#{licenseManagedBean.currentEntity.title}" required="true" requiredMessage="标题不能空白."/>                 
                                <h:outputLabel value="首页显示" for="ontop" />
                                <p:selectBooleanCheckbox id="ontop" value="#{licenseManagedBean.currentEntity.ontop}" required="true" requiredMessage="请选择是否在首页显示."/>
                                <h:outputLabel value="内容" for="content" />
                                <p:editor id="content" value="#{licenseManagedBean.currentEntity.content}" required="true" requiredMessage="内容不能空白."/>
                                <h:outputLabel value="状态" for="status" />
                                <h:outputText id="status" value="#{licenseManagedBean.currentEntity.status}" />
                                <h:outputText value="创建人"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.creator}" title="创建人"/>
                                <h:outputText value="创建日期"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.credate}" title="创建日期">
                                    <f:convertDateTime pattern="yyyy/MM/dd" />
                                </h:outputText>
                                <f:facet name="footer">
                                    <p:commandButton id="btnEdit" action="#{licenseManagedBean.save()}"  icon="ui-icon-disk" value="保存" 
                                                     style="float: right" oncomplete="editDialog.hide();" update=":formList"/>
                                    <p:button id="btnClose" value="退出"  style="float: right"
                                              icon="ui-icon-close" href="#"  onclick="editDialog.hide();" />
                                </f:facet> 
                            </p:panelGrid>
                        </p:dialog>
                    </h:form>
                    <h:form id="formView">
                        <p:dialog id="dlgView" header="行政许可－审核窗口" widgetVar="viewDialog" modal="true" >
                            <p:panelGrid columns="2" columnClasses="plgLable,plgInput520" styleClass="plgDialog" >
                                <h:outputText value="标题"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.title}"/>       
                                <h:outputText value="首页显示"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.ontop}"/>             
                                <h:outputText value="内容"/>
                                <p:editor id="content" value="#{licenseManagedBean.currentEntity.content}" disabled="true"/>
                                <h:outputText value="状态"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.status}"/>
                                <h:outputText value="创建人"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.creator}" title="创建人"/>
                                <h:outputText value="创建日期"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.credate}" title="创建日期">
                                    <f:convertDateTime pattern="yyyy/MM/dd" />
                                </h:outputText>
                                <h:outputText value="审核人"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.cfmuser}" title="审核人"/>
                                <h:outputText value="审核日期"/>
                                <h:outputText value="#{licenseManagedBean.currentEntity.cfmdate}" title="审核日期">
                                    <f:convertDateTime pattern="yyyy/MM/dd" />
                                </h:outputText>
                                <f:facet name="footer">
                                    <p:commandButton id="btnVerify" actionListener="#{licenseManagedBean.verify()}" icon="ui-icon-locked" value="复核" style="float: right"
                                                     rendered="#{licenseManagedBean.currentEntity.status!='V'}"    oncomplete="viewDialog.hide()" update=":formList"/>
                                    <p:commandButton id="btnUnverify" actionListener="#{licenseManagedBean.unverify()}" icon="ui-icon-unlocked" value="取消" style="float: right"
                                                     rendered="#{licenseManagedBean.currentEntity.status=='V'}"    oncomplete="viewDialog.hide()" update=":formList"/>
                                    <p:button id="btnClose" value="退出"  style="float: right"
                                              icon="ui-icon-close" href="#"  onclick="viewDialog.hide();" />
                                </f:facet>
                            </p:panelGrid>              
                        </p:dialog>
                    </h:form>
                </f:view>
            </ui:define>

        </ui:composition>

    </body>
</html>

<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <body>

        <ui:composition template="./template/mainTemplate.xhtml">

            <ui:define name="left">
                <div id="leftMenuBar">
                     <div class="title">
                        <a class="selected" style="height: 32px;padding:12px 83px 0px;">公示公告</a>
                    </div>
                    <ul class="leftNavMenu">
                        <li class="inactive"><a href="/WJS-war/faces/licenseList.xhtml" >行政许可</a></li>
                        <li class="inactive"><a href="/WJS-war/faces/inspectionList.xhtml" >监督抽检</a></li>                     
                        <li id="active" class="active"><a href="/WJS-war/faces/punishmentList.xhtml">行政处罚</a></li>
                    </ul> 
                </div>
                <p:panelMenu rendered="false"/> 
            </ui:define>

            <ui:define name="right">
                <f:view>
                    <h:form id="formList">                 
                        <div class="topTitle box-shadow">
                            <div style="padding-left: 10px;padding-top: 10px;">
                                <a class="ico"></a>
                                <a class="topTitleText">行政处罚</a>
                                <span class="quicklink">行政处罚</span><span class="quicklink">|</span><a class="quicklink" href="/">首页</a><span class="quicklink">当前位置：</span>
                            </div>
                        </div>
                        <p:dataList id="newsList" value="#{punishmentQueryBean.model}" var="item" itemType="none" paginator="true"  paginatorPosition="bottom" rows="15"  
                                    paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  
                                    rowsPerPageTemplate="15,30,45"  lazy="true" styleClass="panellist box-shadow">
                            <span class="ui-icon ui-icon-triangle-1-e" style="float:left;"></span>
                            <h:link outcome="punishmentDetail" value="#{item.title}" style="float: left;">
                                <f:param name="id" value="#{item.id}"/>
                            </h:link>
                            <h:outputText value="#{item.credate}" style="float: right;padding-right:5px;">
                                <f:convertDateTime pattern="yy/MM/dd" />
                            </h:outputText>     
                        </p:dataList>   
                    </h:form>
                </f:view>

            </ui:define>

        </ui:composition>

    </body>
</html>

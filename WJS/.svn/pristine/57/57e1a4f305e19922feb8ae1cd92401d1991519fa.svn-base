<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <body>

        <ui:composition template="./template/jsfTemplate.xhtml">

            <ui:define name="left">
                <ui:include src="./template/leftMenuList.xhtml"/>
            </ui:define>

            <ui:define name="right">
                <f:view>
                    <h:form id="formList">                 
                        <div class="listTitle">
                            <div style="padding-left: 10px;padding-top: 10px;">
                                <a class="pageTile">新闻列表</a>
                                <span class="quicklink">新闻</span><span class="quicklink">|</span><a class="quicklink" href="/">首页</a><span class="quicklink">当前位置：</span>
                            </div>
                        </div>
                        <p:dataList id="newsList" value="#{newsQueryBean.model}" var="item" itemType="none" paginator="true"  paginatorPosition="bottom" rows="15"  
                                    paginatorTemplate="{CurrentPageReport}  {FirstPageLink} {PreviousPageLink} {PageLinks} {NextPageLink} {LastPageLink} {RowsPerPageDropdown}"  
                                    rowsPerPageTemplate="15,30,45"  lazy="true" styleClass="panellist">
                            <span class="ui-icon ui-icon-triangle-1-e" style="float:left;"></span>
                            <h:link outcome="newsDetail" value="#{item.title}" style="float: left;">
                                <f:param name="id" value="#{item.id}"/>
                            </h:link>
                            <h:outputText value="#{item.credate}" style="float: right;padding-right:5px;">
                                <f:convertDateTime pattern="yy/MM/dd" />
                            </h:outputText>     
                        </p:dataList>   
                    </h:form>
                </f:view>

            </ui:define>

        </ui:composition>

    </body>
</html>

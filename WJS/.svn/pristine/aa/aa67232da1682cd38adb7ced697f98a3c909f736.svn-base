<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <body>

        <ui:composition template="./template/jsfTemplate.xhtml">

            <ui:define name="left">
                <ui:include src="./template/leftMenu.xhtml"/>
            </ui:define>

            <ui:define name="content">
                <f:view>
                    <h:form id="formDetail">
                        <div class="topTitle">
                            <div style="padding-left: 10px;padding-top: 10px;text-align: center;">
                                <a style="font-size: 14px;font-weight: bold;text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.8); text-align: center;">#{newsManagedBean.currentNews.title}</a>
                            </div>
                        </div>
                        
                            <span>#{newsManagedBean.currentNews.news}</span>
                            <f:facet name="footer">
                                <h:outputText  value="#{newsManagedBean.currentNews.optdate}" />
                            </f:facet> 
                        
                        <p:outputPanel styleClass="tbllist"></p:outputPanel>
                        <div class="footerTitle">
                            <div style="padding-left: 10px;padding-top: 10px;text-align: center;">
                                <a style="font-size: 14px;font-weight: bold;text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.8);">
                                    <h:outputText  value="#{newsManagedBean.currentNews.optdate}"><f:convertDateTime pattern="yyyy/MM/dd" /></h:outputText></a>
                            </div>
                        </div>
                    </h:form>
                </f:view>

            </ui:define>

        </ui:composition>

    </body>
</html>

<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:p="http://primefaces.org/ui">

    <body>

        <ui:composition template="./template/jsfTemplate.xhtml">

            <ui:define name="left">
                <ui:include src="./template/leftMenuList.xhtml"/>
            </ui:define>

            <ui:define name="content">
                <f:view>
                    <h:form id="formDetail">
                        <h:outputScript library="js" name="detailContent.js" target="head"></h:outputScript>
                        <div class="topTitle">
                            <div style="padding-left: 10px;padding-top: 10px;text-align: center;">
                                <a class="pageTile">#{newsQueryBean.currentNews.title}</a>
                                <span class="quicklink">内容</span><span class="quicklink">|</span><a class="quicklink" href="/WJS-war/faces/newsList.xhtml">新闻</a><span class="quicklink">|</span><a class="quicklink" href="/">首页</a><span class="quicklink">当前位置：</span>
                            </div>
                        </div>
                        <p:outputPanel id="panelDetail" styleClass="panellist">
                            <h:outputText id="contentDetail" value="" /> 
                        </p:outputPanel>
                        <div class="footerTitle">
                            <div style="padding-left: 10px;padding-top: 10px;text-align: center;">
                                <a style="font-size: 12px;font-weight: bold;text-shadow: 0px 1px 0px rgba(255, 255, 255, 0.8);">
                                    发布日期：<h:outputText  value="#{newsQueryBean.currentNews.cfmdate}"><f:convertDateTime pattern="yyyy/MM/dd" /></h:outputText></a>
                            </div>
                        </div>
                        <div  style="display: none;">
                            <output id="detailContent">#{newsQueryBean.currentNews.news}</output>
                        </div>        
                    </h:form>
                </f:view>

            </ui:define>

        </ui:composition>

    </body>
</html>
